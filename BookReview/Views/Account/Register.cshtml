@model BookReview.Models.ViewModels.RegisterModel

@using BookReview.App_GlobalResources

@{
    ViewBag.Title = Resource.Registration;
}

<div class="container">
    <h3 style="color: #8caf39">歡迎加入會員</h3>
</div>
@Html.AntiForgeryToken()
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row-fluid" style="margin-bottom: 20px">
            <div class="span6">
                <div class="row-fluid">
                    <h4>告訴我們你是誰</h4>
                    @Html.TextBoxFor(m => m.Name, new { @class = "span10" })
                    <p class="text-error">@Html.ValidationMessageFor(m => m.Name)</p>
                </div>
                <div class="row-fluid">
                    <h4>常用的電子郵件<small>(我們認真想要推薦好書給你)</small></h4>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "span10" })
                    <p class="text-error">@Html.ValidationMessageFor(m => m.UserName)</p>
                </div>
                <div class="row-fluid">
                    <h4>最愛密碼</h4>
                    @Html.PasswordFor(m => m.Password, new { @class = "span10" })
                    <p class="text-error">@Html.ValidationMessageFor(m => m.Password)</p>
                </div>
                <div class="row-fluid">
                    <h4>最愛密碼確認</h4>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span10" })
                    <p class="text-error">@Html.ValidationMessageFor(m => m.ConfirmPassword)</p>
                </div>
                <div class="row-fluid">
                    <h4>驗證碼</h4>
                    <div class="span2">
                        <img src="@Url.Action("CreateCheckCodeImage", "Account")" alt="驗整碼"/>
                    </div>
                    <div class="span5">
                        難辨識？我們換一個吧
                    </div>
                    @Html.TextBoxFor(m => m.CheckCode, new { @class = "span10" })
                    @Html.ValidationMessageFor(m => m.CheckCode)
                </div>
                <div class="row-fluid">
                    @Html.CheckBox("agree", false)
                    我已閱讀並同意Mr.Book的<a href="#">使用協議</a>
                </div>
            </div>
            <div class="span6">
                <h4>或者，你可以使用以下帳號註冊</h4>
                <p>
                    <a href="#" style="margin-right: 10px">
                        <img src="~/Content/_img/facebook.png" /></a>
                    <a href="#">
                        <img src="~/Content/_img/google.png" /></a>
                </p>
            </div>
        </div>
        <div class="row">
            <input type="submit" class="btn btn-large btn-success span2" value="註冊去" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
