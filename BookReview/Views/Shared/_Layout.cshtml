                            <a href="#">
                                <h3>Mr.Book Blog</h3>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="span4">
                </div>
                <div class="span4">
                    <div class="row-fluid" style="margin-bottom: 15px; color: white">
                        <small class="pull-right">By continuing past this page, you agree to Terms of Use All trademarks are properties of their respective owners &copy;2013-Mr.Book&trade;.All right reserved.</small>
                        @*<div class="row-fluid">
                            <small class="pull-right">&copy;2013-Mr.Book&trade;.All right reserved.</small>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/jquery.rateit.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    @RenderSection("scripts", false)
</body>
