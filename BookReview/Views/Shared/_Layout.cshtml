    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <div class="nav-collapse collapse">
                    @{
                        bool isShowLoginBar = ViewData["IsShowLoginBar"] == null || (bool)ViewData["IsShowLoginBar"];
                    }
                    @if (isShowLoginBar)
                    { 
                        <div class="row">
                            <div class="span2 offset10">
                                <div class="pull-right">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        @Html.ActionLink("登出", "LogOff", "Account")
                                    }
                                    else
                                    {   
                                        @Html.ActionLink("登入", "Login", "Account")
                                        <span class="divider">/</span>
                                        @Html.ActionLink("加入會員", "Register", "Account")
                                    }
                                </div>
                                @*登入 / 加入會員*@
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="brand">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="~/Content/_img/logo.png" /></a>
                        </div>
                        @if (isShowLoginBar)
                        {
                            <form class="navbar-form pull-right" style="padding-top: 10px">
                                <div class="control-group success">
                                    <input type="text" placeholder="找找你想要的書籍" />
                                    <button class="btn btn-success">搜尋</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*內容*@
    <div class="container">
        @RenderBody()
    </div>

    <div class="container">
        <div class="row">
            <img class="span3 offset9" src="~/Content/_img/about.png" />
        </div>
    </div>
    <footer style="background-color: #85b440">
        <div class="container">
            <div class="row-fluid">
                <div class="span4" style="padding-top: 30px">
                    <div class="row-fluid" style="background-color: #e4ecd7; margin-bottom: 15px">
                        <div class="span12" style="text-align: center">
                            <a href="#">
                                <h3>Mr.Book 二手書</h3>
                            </a>
                        </div>
                    </div>
                    <div class="row-fluid" style="background-color: #e4ecd7; margin-bottom: 15px">
                        <div class="span12" style="text-align: center">
                            <a href="#">
                                <h3>Mr.Book 電子書</h3>
                            </a>
                        </div>
                    </div>
                    <div class="row-fluid" style="background-color: #e4ecd7; margin-bottom: 15px">
